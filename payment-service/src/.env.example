# Service Configuration
NODE_ENV=development
PORT=3005
SERVICE_NAME=payment-service

# Database Connection
DB_HOST=postgres
DB_PORT=5432
DB_NAME=payment_db
DB_USER=payment_user
DB_PASSWORD=payment_pass

# Redis Configuration
REDIS_HOST=redis-master
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=5

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:rabbitmq123@rabbitmq:5672
RABBITMQ_EXCHANGE=skyn3t.events
RABBITMQ_QUEUE_PREFIX=payment

# JWT Configuration
JWT_SECRET=your-jwt-secret-here

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Chilean Banks Configuration
# Banco Estado
BANCO_ESTADO_API_URL=https://api.bancoestado.cl/v1
BANCO_ESTADO_API_KEY=your-banco-estado-api-key
BANCO_ESTADO_API_SECRET=your-banco-estado-api-secret
BANCO_ESTADO_MERCHANT_ID=your-merchant-id
BANCO_ESTADO_TIMEOUT=30000

# Santander Chile
SANTANDER_API_URL=https://api.santander.cl/v2
SANTANDER_CLIENT_ID=your-santander-client-id
SANTANDER_CLIENT_SECRET=your-santander-client-secret
SANTANDER_REDIRECT_URI=https://yourdomain.com/callback/santander
SANTANDER_TIMEOUT=30000

# BCI (Transbank Integration)
BCI_API_URL=https://webpay3gint.transbank.cl
BCI_API_TOKEN=your-bci-api-token
BCI_API_SECRET=your-bci-api-secret
BCI_COMMERCE_CODE=your-commerce-code
BCI_TIMEOUT=30000

# Banco de Chile
BANCO_CHILE_API_URL=https://api.bancochile.cl/v1
BANCO_CHILE_API_KEY=your-banco-chile-api-key
BANCO_CHILE_API_SECRET=your-banco-chile-api-secret
BANCO_CHILE_MERCHANT_ID=your-merchant-id
BANCO_CHILE_TIMEOUT=30000

# Scotiabank Chile
SCOTIABANK_API_URL=https://api.scotiabank.cl/v1
SCOTIABANK_API_KEY=your-scotiabank-api-key
SCOTIABANK_API_SECRET=your-scotiabank-api-secret
SCOTIABANK_TIMEOUT=30000

# International Payment Gateways
# PayPal
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_WEBHOOK_ID=your-webhook-id

# MercadoPago
MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-access-token
MERCADOPAGO_PUBLIC_KEY=your-mercadopago-public-key
MERCADOPAGO_WEBHOOK_SECRET=your-webhook-secret

# Stripe (additional gateway)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Payment Processing Configuration
PAYMENT_TIMEOUT=60000
PAYMENT_RETRY_ATTEMPTS=3
PAYMENT_RETRY_DELAY=5000

# Currency Configuration
DEFAULT_CURRENCY=CLP
SUPPORTED_CURRENCIES=CLP,USD,EUR

# Webhook Configuration
WEBHOOK_TIMEOUT=10000
WEBHOOK_RETRY_ATTEMPTS=3

# Security
ENCRYPTION_KEY=your-32-character-encryption-key!!
PAYMENT_SIGNATURE_KEY=your-payment-signature-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9095